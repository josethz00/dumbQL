{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs":  true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"],
      "@types": ["../@types/*"]
    },
    "incremental": true,
  },
  "include": ["src", "tests", "@types", "@types/**/*"],
  "exclude": ["node_modules"]
}
